<% post_index = index || 0 %>

<div class="col-sm-6 col-md-4 post-list-item">
    <div class="thumbnail">
        <%= raw post.the_link_thumb({}, {style: "height: 200px; width: 100%; display: block;", alt: post.the_title}) %>
        <div class="caption">
            <h4 id=<%= "thumbnail-label-#{post_index}" %>>
                <a href="<%= post.the_url %>"><%= post.the_title %></a>
            </h4>
            <small class="" style="display: block;"><%= post.the_created_at %></small>
            <hr>
            <p><%= raw post.the_excerpt %> <%= post.the_edit_link %></p>
        </div>
    </div>
</div>